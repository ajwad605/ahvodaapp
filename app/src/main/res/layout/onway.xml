<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map2"
        android:layout_width="wrap_content"
        android:layout_height="350.0dip" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="60dp">

    <TextView
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_height="wrap_content"
        android:gravity="left"/>

    <TextView
        android:id="@+id/Distance"
        android:layout_width="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"

        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"         >

        <ImageButton
            android:id="@+id/Cancel"
            android:layout_width="100dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/cancelpic"
            android:gravity="left"/>

        <Button
            android:layout_width="100dp"
            android:id="@+id/JobButton"
            android:layout_height="40dp"
            android:text="Start Job!"
            android:layout_marginLeft="30dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="100dp"
            android:id="@+id/Call"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/callpic"
            android:gravity="right"

            />


    </LinearLayout>



</LinearLayout>